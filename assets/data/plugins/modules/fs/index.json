Version?: number): Promise","anchor":"#writejsonfilepath-string-data-any-beautify--false-fileversion-number-promisevoid"},{"depth":3,"value":"readJSON(filePath: string): Promise","anchor":"#readjsonfilepath-string-promiseany"}]},"allMarkdownPage":{"edges":[{"node":{"path":"/plugins/modules/windows/","title":"@bridge/windows"}},{"node":{"path":"/plugins/other/default-file-types/","title":"Default File Types"}},{"node":{"path":"/plugins/modules/utils/","title":"@bridge/utils"}},{"node":{"path":"/plugins/modules/ui/","title":"@bridge/ui"}},{"node":{"path":"/plugins/modules/path/","title":"@bridge/path"}},{"node":{"path":"/plugins/modules/sidebar/","title":"@bridge/sidebar"}},{"node":{"path":"/plugins/modules/","title":"Plugin Modules"}},{"node":{"path":"/plugins/modules/globals/","title":"@bridge/globals"}},{"node":{"path":"/plugins/modules/fs/","title":"@bridge/fs"}},{"node":{"path":"/plugins/modules/footer/","title":"@bridge/notification"}},{"node":{"path":"/plugins/modules/fetch-definition/","title":"@bridge/fetch-definition"}},{"node":{"path":"/plugins/modules/env/","title":"@bridge/env"}},{"node":{"path":"/plugins/json/themes/","title":"Themes"}},{"node":{"path":"/plugins/json/snippets/","title":"Snippets"}},{"node":{"path":"/plugins/json/presets/","title":"Presets"}},{"node":{"path":"/editor/faq/","title":"FAQ"}},{"node":{"path":"/plugins/json/lightning-cache/","title":"Lightning Cache"}},{"node":{"path":"/plugins/auto-completions/","title":"Auto-Completions"}},{"node":{"path":"/editor/getting-started/","title":"Getting Started"}},{"node":{"path":"/editor/projects/","title":"Projects"}},{"node":{"path":"/plugins/auto-completions/dynamic-references/","title":"Dynamic References"}},{"node":{"path":"/plugins/","title":"Plugin API"}},{"node":{"path":"/plugins/custom-components/","title":"Custom Components"}},{"node":{"path":"/editor/","title":"Editor"}},{"node":{"path":"/plugins/custom-commands/","title":"Custom Commands"}},{"node":{"path":"/editor/features/","title"